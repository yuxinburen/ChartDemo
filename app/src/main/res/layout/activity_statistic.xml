<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.chartdemo.StatisticActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.chartdemo.ui.chartview.StatisticView
                android:id="@+id/sv_chart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_insulin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <com.chartdemo.ui.chartview.StatisticView
                android:id="@+id/sv_chart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blood_sugar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.chartdemo.ui.chartview.StatisticView
                android:id="@+id/sv_chart3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blood_presure"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <com.chartdemo.ui.chartview.StatisticView
                android:id="@+id/sv_chart4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_heart"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.chartdemo.ui.chartview.StatisticView
                android:id="@+id/sv_chart5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_step"/>
            </LinearLayout>
        </ScrollView>
</LinearLayout>
